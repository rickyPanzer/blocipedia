<%= simple_form_for [@user, @wiki], url: user_wiki_path do |f| %>
  <%= f.input :title %>
  <%= f.input :body %>
  <% if current_user.role == "admin" || current_user.role == "premium" %>
    <%= f.input :private %>
    <%= f.input :collaborators, collection: @wiki.collaborators, as: :check_boxes  %>
  <% end %>
  <%= f.submit class: "btn btn-success"  %>
<% end %>